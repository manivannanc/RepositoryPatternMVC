@model IEnumerable<TestDotNetWebApp.Models.Category>

@{
    ViewBag.Title = "All Catalogs";
}

<h2>All Catalogs</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>        
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
           
            <td>               
                @Html.ActionLink("Details", "Index","Catalog", new { id = item.Id },null) 
            </td>
        </tr>
    }

</table>
